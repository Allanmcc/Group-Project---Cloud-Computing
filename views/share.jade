extends layout

block content

	head

			

	body
		include banner_in
		include sidebar

	.content
		.h1
			b= file_name
		.h2
			b Shared From:
				|#{owner}
			
			
		form(name="form", action="/share_download?f="+file_name, method="POST")
			.btn-group-lg(role="group" aria-label="...")
				if (gen == 'f')
					input.form-control(type="text", name="key" id="key_text_field" placeholder = "key")
				button.btn.btn-default(type="submit")
					b Download
				button.btn.btn-default(type="submit" onclick='form.action="/share_view?f='+file_name+'"; form.method="POST"; return true;')
					b View
				span.btn-group-lg(role="group")
					button.btn.btn-default.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
						b Raw 
						span.caret
					ul.dropdown-menu.dropdown-menu-right
						
						button.btn.btn-default.dropdown-toggle(type="submit" onclick='form.action="/share_download_raw?f='+file_name+'"; form.method="POST"; return true;')
							b Download Raw
						
						button.btn.btn-default.dropdown-toggle(type="submit" onclick='form.action="/share_view_raw?f='+file_name+'"; form.method="POST"; return true;')
							b View Raw
				button.btn.btn-default(type="submit" onclick='form.action="/delete_file?f='+file_name+'"; form.method="POST"; return confirm("Are you sure you want to delete this file?");')
					b Delete
		
		
	style.

		.content{
			position: absolute;
			left: 50%;
			top: 50%;
			transform: translate(-50%, -50%);
		
		}
		.share_button{
		
			padding: 2%;
		}
