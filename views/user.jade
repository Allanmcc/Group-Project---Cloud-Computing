extends layout

block content
	head
		script(src="./progress.js")
		script(src="./radioHide.js")

	div
        
		form(name="form", action="/upload", method="POST", enctype="multipart/form-data")
		h1 Files:
		ul
			each file, i in files
				li
					a(href='/file?f='+file.file_name) #{file.file_name}
		h2 Upload File:
	
			style
				include ./userstyle.css

			div.input
				input(type="radio", name="radio", value="yes", checked="checked") 
				a Automatically Generate Key

			div.input
				input(type="radio", name="radio", value="no") 
				a Provide Key  
				input(type="text", name="key")

			div.input
				input(type="file", name="file", class="file_button")

			div.actions
				input(type="submit", class="submit_button")
			
		p Percent Complete:
		span(id="status") 0
	

