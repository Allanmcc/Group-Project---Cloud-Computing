extends layout

block content

	head
		script.
			$(document).ready(function () {
				
				var key = t;
				console.log(key);
				if (key == 'f'){
					$('form').css({"height":"200"});
				}
			});
			
			var t = !{JSON.stringify(gen)};
	body
		div#banner
			div#banner-content
				p SecureMe


	
	form(name="form", action="/download?f="+file_name, method="POST")
		ul
			h1= file_name
		if (gen == 'f')
			p Key
			input(type="text", name="key")
		div.actions
			input(type="submit" class="download_button" value="Download" )
			input(type="submit" class="share_button" value="Share" onclick="form.action='/share?f="+file_name+"'; form.method='POST'; return true;")
			
			input(type="submit" class="share_button" value="Raw" onclick="form.action='/download_raw?f="+file_name+"'; form.method='POST'; return true;")
			input(type="submit" class="back_button" value="Back" onclick="form.action='/user'; form.method='GET'; return true;")
	

